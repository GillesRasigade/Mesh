<?php

// Reading the controller name :
$c = $_REQUEST['c'];

if ( empty($c) ) {
    die('Controller name can not be empty');
}

$lib = './get/' . strtolower($c) . '.php';
if ( file_exists($lib) ) {
    // Require the correct controller :
    require_once $lib;
    
    // Read the action to apply :
    $a = $_REQUEST['a'];
    
