{
  "manifest_version": 2,
  "name": "Media Explorer",
  "version": "1",
  "permissions": ["webview"],
  "icons": {
    "32": "favicon-32.png",
    "64": "favicon-64.png",
    "128": "favicon-128.png"
  },
  "browser_action": {
    "default_icon": "favicon-64.png",
    "default_popup": "index.html"
  },
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  }
}
